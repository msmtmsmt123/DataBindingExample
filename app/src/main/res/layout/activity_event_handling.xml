<?xml version="1.0" encoding="utf-8"?><?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="handlers"
            type="com.huangyu.databindingexamle.handlers.Handlers" />

        <variable
            name="user"
            type="com.huangyu.databindingexamle.bean.User" />

        <variable
            name="task"
            type="com.huangyu.databindingexamle.bean.Task" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{handlers::methodReference}"
            android:text="@{user.firstName}" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> handlers.listenerBindings(task)}"
            android:text="@{user.firstName}" />
    </LinearLayout>

</layout>
